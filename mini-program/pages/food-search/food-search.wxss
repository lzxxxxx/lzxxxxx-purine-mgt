.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  height: 100vh;
  box-sizing: border-box;
}

.search-box {
  padding: 20rpx;
  padding-bottom: 0;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 1;
}

.search-input {
  background: #f5f5f5;
  padding: 10rpx;
  border-radius: 10rpx;
  height: 40rpx;
}

.search-section {
  flex-shrink: 0;
  margin-bottom: 10rpx;
}

.food-list {
  flex: 1;
  overflow: hidden;
  margin-top: 10rpx;
}

.food-item {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  margin: 10rpx;
}

.food-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.food-info {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
}

.risk-level {
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.risk-high {
  background: #ffebee;
  color: #f44336;
}

.risk-medium {
  background: #fff3e0;
  color: #ff9800;
}

.risk-low {
  background: #e8f5e9;
  color: #4caf50;
}

.loading, .no-data {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.data-source {
  font-size: 22rpx;
  color: #999;
  text-align: left;
  padding: 10rpx;
} 