.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.user-info {
  background: #fff;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
}

.menu-list {
  margin-top: 20rpx;
  background: #fff;
} 